<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Внешний вид" app:iconSpaceReserved="false">
    <ListPreference
    app:title="Тема"
    app:iconSpaceReserved="false"
    app:key="theme"
    app:defaultValue="system"
    app:entries="@array/theme_entries"
    app:entryValues="@array/theme_value"
    app:summary="%s"
    app:widgetLayout="@layout/preference_widget_chevron"
    />
    </PreferenceCategory>

    <PreferenceCategory app:title="Поиск и рекомендации" app:iconSpaceReserved="false">


        <SwitchPreference
                android:defaultValue="true"
                android:title="Умный поиск"
                android:key="smart_search_enabled"
                app:iconSpaceReserved="false"/>

        <SwitchPreference
                android:defaultValue="true"
                android:title="Рекомендации" android:key="switch_preference_1"
                app:iconSpaceReserved="false"/>

    </PreferenceCategory>


</PreferenceScreen>