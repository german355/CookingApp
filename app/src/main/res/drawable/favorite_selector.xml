<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Когда чекбокс отмечен (лайкнут), используем заполненное сердечко -->
    <item android:drawable="@drawable/ic_favorite" android:state_checked="true"/>
    <!-- Когда чекбокс не отмечен (не лайкнут), используем контурное сердечко -->
    <item android:drawable="@drawable/ic_favorite_border" android:state_checked="false"/>
</selector> 